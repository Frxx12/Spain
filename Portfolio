  <script>
    // Set year in footer
    document.getElementById('year').textContent = new Date().getFullYear();

    // Smooth scroll for anchor links
    document.querySelectorAll('a[href^="#"]').forEach(a=>{
      a.addEventListener('click', e=>{
        const h = a.getAttribute('href');
        if(!h || h === '#') return;
        const t = document.querySelector(h);
        if(t){ e.preventDefault(); t.scrollIntoView({behavior:'smooth',block:'start'}); }
      });
    });

    // Simple toast
    function showToast(text, ms = 2500){
      const existing = document.getElementById('__toast');
      if(existing) existing.remove();
      const el = document.createElement('div');
      el.id = '__toast';
      el.textContent = text;
      Object.assign(el.style, {
        position:'fixed', right:'18px', bottom:'18px', background:'rgba(2,6,23,0.92)',
        color:'#e6eef6', padding:'10px 14px', borderRadius:'10px', zIndex:9999, fontSize:'13px'
      });
      document.body.appendChild(el);
      setTimeout(()=>el.remove(), ms);
    }

    // Contact form: validation + simulated send
    (function(){
      const form = document.getElementById('contactForm');
      if(!form) return;
      form.addEventListener('submit', async (e)=>{
        e.preventDefault();
        const name = form.querySelector('#name').value.trim();
        const email = form.querySelector('#email').value.trim();
        const message = form.querySelector('#message').value.trim();
        if(!name || !email || !message){ showToast('Please fill all fields'); return; }
        const btn = form.querySelector('button[type="submit"]');
        btn.disabled = true;
        btn.textContent = 'Sending...';
        await new Promise(r=>setTimeout(r,800));
        form.reset();
        btn.disabled = false;
        btn.textContent = 'Send';
        showToast('Message sent ‚Äî thank you!');
      });
    })();

    // Filter projects by tag (click tag)
    (function(){
      const projects = Array.from(document.querySelectorAll('.project'));
      const tags = Array.from(document.querySelectorAll('.project .tag:not([href])'));
      if(!projects.length || !tags.length) return;
      let active = null;
      function applyFilter(f){
        projects.forEach(p=>{
          if(!f) p.style.display = '';
          else p.style.display = (p.dataset.tags||'').toLowerCase().includes(f.toLowerCase()) ? '' : 'none';
        });
      }
      tags.forEach(t=>{
        t.addEventListener('click', ()=>{
          const txt = t.textContent.trim();
          if(active === txt){ active = null; tags.forEach(x=>x.style.opacity=''); applyFilter(null); showToast('Filter cleared'); }
          else { active = txt; tags.forEach(x=>x.style.opacity = x===t ? '' : '0.45'); applyFilter(txt); showToast('Filter: '+txt); }
        });
      });
      window.addEventListener('keydown', e=>{ if(e.key === 'Escape' && active){ active = null; tags.forEach(x=>x.style.opacity=''); applyFilter(null); showToast('Filter cleared'); } });
    })();

    // Back to top button
    (function(){
      const btn = document.createElement('button');
      btn.textContent = '‚Üë';
      Object.assign(btn.style, {position:'fixed', right:'18px', bottom:'70px', width:'44px', height:'44px', borderRadius:'10px', border:'none', background:'var(--accent)', color:'#ffffff', display:'none', cursor:'pointer', zIndex:9998});
      document.body.appendChild(btn);
      btn.addEventListener('click', ()=>window.scrollTo({top:0,behavior:'smooth'}));
      window.addEventListener('scroll', ()=>{ btn.style.display = window.scrollY > 220 ? 'block' : 'none'; });
    })();
  </script>
